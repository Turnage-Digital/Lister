@page
@model Lister.Lists.Presentation.Pages.IndexModel

@{
    ViewData["Title"] = "Lists";
    Layout = "/Pages/Shared/_ListsLayout.cshtml";
}

<!-- Dashboard Section -->
<main class="container mx-auto my-4 grow">
    <!-- Container for the title + button -->
    <div class="m-8 flex items-center justify-between">
        <!-- Title -->
        <h1 class="text-3xl">Lists</h1>

        <!-- "Create List" Button -->
        <a lister-button asp-page="Create">Create List</a>
    </div>

    <!-- Cards Grid -->
    <div class="m-8 grid grid-cols-1 gap-6 lg:grid-cols-2 xl:grid-cols-3">
        @foreach (var listName in Model.ListNames)
        {
            <!-- Card -->
            <div
                class="flex flex-col rounded-lg border border-gray-300 bg-white shadow-sm"
            >
                <!-- Card Content -->
                <div class="grow p-6">
                    <h3 class="text-2xl font-bold text-gray-800">@listName.Name</h3>
                    <p class="text-md mt-2 text-gray-700">@listName.Count items</p>
                </div>

                <!-- Action List at the bottom, right-aligned -->
                <div class="flex mr-4 items-center justify-end gap-2">
                    <!-- "View List" icon button -->
                    <a lister-icon-button>
                        <span class="material-icons">visibility</span>
                    </a>
                    <!-- "Share" icon button -->
                    <a lister-icon-button>
                        <span class="material-icons">ios_share</span>
                    </a>
                    <!-- "Delete" icon button -->
                    <a lister-icon-button>
                        <span class="material-icons">delete</span>
                    </a>
                </div>
            </div>
        }
    </div>
</main>