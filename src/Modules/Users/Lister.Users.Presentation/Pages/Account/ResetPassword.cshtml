@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Lister.Users.Presentation.Pages.Account.ResetPasswordModel

@{
    ViewData["Title"] = "Reset password";
    Layout = "/Pages/Shared/_ProjectLayout.cshtml";
}

<div class="flex flex-col h-full py-12 sm:px-6">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-medium text-[#414b55]">Reset password</h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="px-4 py-8 bg-white shadow-md sm:rounded-lg sm:px-10">
            <form asp-page="ResetPassword" class="space-y-6">
                <div>
                    <label asp-for="Input.EmailAddress" class="font-medium text-[#414b55]">Email Address</label>
                    <div class="mt-2">
                        <input asp-for="Input.EmailAddress" 
                               type="text"
                               class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm"
                               autocomplete="username"
                               required
                               autofocus/>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Password" class="font-medium text-[#414b55]">Password</label>
                    <div class="mt-2">
                        <input asp-for="Input.Password"
                               type="password"
                               class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm"
                               autocomplete="new-password"
                               required/>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="font-medium text-[#414b55]">Confirm Password</label>
                    <div class="mt-2">
                        <input asp-for="Input.ConfirmPassword"
                               type="password"
                               class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm"
                               autocomplete="new-password"
                               required/>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full rounded-md bg-[#0A558C] p-2 font-medium text-white shadow-sm hover:bg-[#003E6B]">
                        Reset Password
                    </button>
                </div>

                <input type="hidden" asp-for="ReturnUrl"/>
                <input type="hidden" asp-for="Code"/>
            </form>
        </div>

        <partial name="_ValidationSummary"/>
    </div>
</div>