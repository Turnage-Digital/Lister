<!-- Header Section -->
<header class="bg-[#0A558C] shadow-lg">
    <div class="mx-8 my-4 flex items-center justify-between">
        <!-- Site Title -->
        <h2 class="text-2xl font-bold text-white">Lister</h2>

        <!-- Account Icon and Menu, hide if logged out -->
        @if (User.Identity is not null && User.Identity.IsAuthenticated)
        {
            <button
                class="flex h-10 w-10 items-center justify-center rounded-full shadow-lg transition-colors hover:bg-[#003E6B]">
                <span class="material-icons text-2xl text-white">account_circle</span>
            </button>
        }
    </div>
</header>